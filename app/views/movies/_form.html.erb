<%= form_with(model: movie) do |f| %>
  <%= render "shared/errors", objekt: movie %>
  <%= f.label(:title) %>
  <%= f.text_field(:title, autofocus: true) %>
  <%= f.label(:rating) %>
  <%= f.select(:rating, Movie::RATINGS, prompt: "Select a rating") %>
  <%= f.label(:total_gross) %>
  <% new_movie = movie.id.nil? %>
  <%= f.number_field(:total_gross) %>
  <%= f.label(:description) %>
  <%= f.text_area(:description, rows: 10) %>
  <%= f.label(:released_on) %>
  <%= f.date_field(:released_on, ampm: false, class: 'date') %>
  <%= f.label(:director) %>
  <%= f.text_field(:director) %>
  <%= f.label(:duration) %>
  <%= f.text_field(:duration) %>
  <%= f.label(:main_image) %>
  <%= f.file_field(:main_image) %>
  <%= f.label(:genres) %>
  <%= f.collection_check_boxes(:genre_ids,Genre.order(:name),:id,:name) %>
  <%= f.submit %>
<% end %>
